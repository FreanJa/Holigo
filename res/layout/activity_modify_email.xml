<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="20dp"
    android:paddingHorizontal="20dp"
    tools:context=".Activities.ModifyEmailActivity"
    android:background="@drawable/rectangle_9"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_new_email_address"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center"
        android:textAppearance="@style/tittle2"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="username"
        android:fontFamily="@font/nunito_sans_regular"
        android:hint="@string/enter_your_email"
        android:inputType="textPersonName"
        android:letterSpacing="0.02"
        android:lineHeight="14dp"
        android:maxLines="1"
        android:textColor="#092C4C"
        android:textColorHint="#ABB3BB"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/sava"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save"
            android:gravity="center"
            android:textColor="#FFB600"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="#FFB600"/>


    </LinearLayout>


</LinearLayout>