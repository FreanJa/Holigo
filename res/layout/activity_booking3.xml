<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BookingActivity3"
    android:background="#F8F8F8">

    <RelativeLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="42dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/ticket"
            android:textAppearance="@style/tittle3" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="327dp"
        android:layout_height="600dp"
        android:background="@drawable/subtract"
        android:layout_below="@+id/navigation"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/ticket_iv"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/t10001" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_below="@+id/ticket_iv"
            android:background="#fff">

            <TextView
                android:id="@+id/brief_intro"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:text="@string/brief_intro"
                android:textAppearance="@style/tittle3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:gravity="top"
                    android:text="@string/_4_5"
                    android:textAppearance="@style/text16" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/place_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:gravity="top"
                    android:text="@string/location"
                    android:textAppearance="@style/text16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/rectangle_4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calender"
                            app:tint="#FBA089" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:lineHeight="22dp"
                            android:text="Check In"
                            android:textAppearance="@style/text_light_12" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/check_in_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="14 August"
                        android:textAppearance="@style/text16_"/>

                </LinearLayout>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E8E8E8"
                    android:layout_marginEnd="6dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calender"
                            app:tint="#FBA089" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:lineHeight="22dp"
                            android:text="Check Out"
                            android:textAppearance="@style/text_light_12" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/check_out_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="20 August"
                        android:textAppearance="@style/text16_" />

                </LinearLayout>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E8E8E8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_tag"
                            android:layout_marginTop="2dp"
                            app:tint="#FBA089" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:lineHeight="22dp"
                            android:text="Ticket"
                            android:textAppearance="@style/text_light_12" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="9 Person"
                        android:textAppearance="@style/text16_" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/adult_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Adult x 3"
                        android:textAppearance="@style/text16_" />

                    <TextView
                        android:id="@+id/adult_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="$981"
                        android:textAppearance="@style/text16_" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/child_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Children x 4"
                        android:textAppearance="@style/text16_" />

                    <TextView
                        android:id="@+id/child_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="$568"
                        android:textAppearance="@style/text16_" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/infant_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text="Infant x 2"
                        android:textAppearance="@style/text16_" />

                    <TextView
                        android:id="@+id/infant_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="$114"
                        android:textAppearance="@style/text16_" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E8E8E8"
                    android:layout_marginTop="20dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Total Price"
                        android:textAppearance="@style/tip3" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="$1663"
                        android:textAppearance="@style/tip4" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background"
        android:elevation="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/gradual_yellow"
            android:fontFamily="@font/nunito_sans_bold"
            android:letterSpacing="0.03"
            android:text="@string/continue_to_paymant"
            android:textColor="#54480C"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>