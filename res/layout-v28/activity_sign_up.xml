<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:letterSpacing="0.03"
            android:lineHeight="36dp"
            android:text="@string/sign_up_title"
            android:textColor="#092C4C"
            android:textSize="24sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_sans_regular"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:lineHeight="22dp"
            android:text="@string/sign_up_desc"
            android:textColor="#092C4C"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:text="@string/name"
                android:textColor="#092C4C"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="@string/enter_your_nickname"
                android:inputType="textPersonName"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:maxLines="1"
                android:textColor="#092C4C"
                android:textColorHint="#ABB3BB"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:text="@string/email"
                android:textColor="#092C4C"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="@string/enter_your_email"
                android:inputType="textWebEmailAddress"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:maxLines="1"
                android:textColor="#092C4C"
                android:textColorHint="#ABB3BB"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:text="@string/password"
                android:textColor="#092C4C"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password"
                    android:autofillHints="password"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:letterSpacing="0.02"
                    android:lineHeight="14dp"
                    android:maxLines="1"
                    android:textColor="#092C4C"
                    android:textColorHint="#ABB3BB"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_password"
                    android:inputType="textWebPassword" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:text="@string/re_type"
                android:textColor="#092C4C"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/re_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:fontFamily="@font/nunito_sans_regular"
                android:hint="@string/re_type_password"
                android:inputType="textWebPassword"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:maxLines="1"
                android:textColor="#092C4C"
                android:textColorHint="#ABB3BB"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/accept_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:buttonTint="#E1E1E1" />

                <TextView
                    android:id="@+id/accept_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/accept_cb"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:lineHeight="14dp"
                    android:text="@string/accept_term_of_service"
                    android:textColor="#FC6D5B"
                    android:textSize="12sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineHeight="14dp"
                android:textColor="#FC6D5B"
                android:textSize="12sp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_try_signup"
            android:layout_width="327dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradual_yellow"
            android:fontFamily="@font/nunito_sans_bold"
            android:letterSpacing="0.03"
            android:text="@string/sign_up"
            android:textColor="#54480C"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_regular"
                android:letterSpacing="0.03"
                android:text="@string/have_account"
                android:textColor="#092C4C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv2signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:letterSpacing="0.03"
                android:paddingStart="4dp"
                android:text="@string/sign_in"
                android:textColor="#F2613C"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>